{
  "name": "bitfit",
  "version": "0.1.0",
  "description": "An app designed to help students learn to write and read C code.",
  "keywords": [
    "C",
    "learn",
    "teach"
  ],
  "homepage": "https://github.com/celinaberg/BitFit",
  "bugs": "https://github.com/celinaberg/BitFit/issues",
  "license": "MIT",
  "main": "server/app.js",
  "scripts": {
    "lint": "eslint .",
    "test": "ava && yarn run lint",
    "start": "NODE_ENV=development nodemon server/app.js --exec babel-node",
    "debug": "NODE_ENV=development nodemon server/app.js --exec babel-node --inspect",
    "build:js": "babel server -d build/server",
    "build": "yarn run build:js && cp -r server/cert build/server/cert",
    "clean": "rm -rf build",
    "clean-deep": "yarn run clean && rm -rf node_modules"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "composable-middleware": "^0.3.0",
    "compression": "^1.7.2",
    "connect-mongo": "^2.0.1",
    "errorhandler": "^1.5.0",
    "express": "^4.16.3",
    "express-session": "^1.15.6",
    "jsesc": "^2.5.1",
    "lodash": "^4.17.10",
    "method-override": "^2.3.10",
    "mongoose": "^5.1.2",
    "morgan": "^1.9.0",
    "passport": "^0.4.0",
    "passport-saml": "^0.33.0",
    "promise-timeout": "^1.3.0",
    "simple-dockerode": "^0.2.2"
  },
  "devDependencies": {
    "ava": "1.0.0-beta.6",
    "babel-cli": "^6.24.1",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.3",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.2",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "babel-preset-flow": "^6.23.0",
    "babel-register": "^6.26.0",
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-flowtype": "^2.47.1",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-react": "^7.8.2",
    "flow-bin": "^0.73.0",
    "jest": "^23.1.0",
    "mock-express-request": "^0.2.2",
    "mock-express-response": "^0.2.2",
    "nodemon": "^1.17.5",
    "prettier": "^1.13.0"
  },
  "engines": {
    "node": "^10",
    "npm": "^6"
  },
  "private": true,
  "workspaces": [
    "client/"
  ],
  "ava": {
    "require": [
      "babel-register"
    ],
    "babel": {
			"testOptions": {
				"plugins": [
					"babel-plugin-transform-es2015-modules-commonjs",
          "babel-plugin-transform-react-jsx"
				],
        "babelrc": false
			}
		}
  }
}
